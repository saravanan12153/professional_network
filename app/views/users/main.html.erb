<div class="container-fluid">
    <h1>Welcome! <small>Expand Your Network</small></h1>

    <div class="col-md-1"></div>
    <div class="col-md-4">


        <h3>Register</h3>
        <form action='/users' method="post" class="form-horizontal">
          <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
          <div class="form-group">
          <label class="col-sm-3 control-label">Name</label>
          <div class="col-sm-9">
          <input type="text" name="name" class="form-control">
          </div>
          </div>
          <div class="form-group">
          <label class="col-sm-3 control-label">Email</label>
          <div class="col-sm-9">
          <input type="text" name="email" class="form-control">
          </div>
          </div>
          <div class="form-group">
          <label class="col-sm-3 control-label">Password</label>
          <div class="col-sm-9">
          <input type="password" name="password" class="form-control">
          </div>
          </div>
          <div class="form-group">
          <div class="col-sm-12">*Password should be at least 8 characters</div>
          </div>
          <div class="form-group">
          <label class="col-sm-3 control-label">Confirm Password</label>
          <div class="col-sm-9">
          <input type="password" name="password_confirmation" class="form-control">
          </div>
          </div>
          <div class="form-group">
          <label class="col-sm-3 control-label">Description</label>
          <div class="col-sm-9">
          <input type="text" name="description" class="form-control">
          </div>
          </div>
          <div class="form-group">
          <div class="col-sm-3"></div>
          <div class="col-sm-9">
          <input class="btn btn-primary btn-lg btn-block" type="submit" value="Register">
          </div>
          </div>
        </form>


    </div>
    <div class="col-md-1"></div>
    <div class="col-md-4">

        <h3>Login</h3>
        <form action='/sessions' method="post" class="form-horizontal">
          <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
          <div class="form-group">
          <label class="col-sm-3 control-label">Email</label>
          <div class="col-sm-9">
          <input type="text" name="email" class="form-control">
          </div>
          </div>
          <div class="form-group">
          <label class="col-sm-3 control-label">Password</label>
          <div class="col-sm-9">
          <input type="password" name="password" class="form-control">
          </div>
          </div>
          <div class="form-group">
          <div class="col-sm-3"></div>
          <div class="col-sm-9">
          <input class="btn btn-primary btn-lg btn-block" type="submit" value="Login">
          </div>
          </div>
        </form>


    </div>
    <div class="col-md-1"></div>
</div>

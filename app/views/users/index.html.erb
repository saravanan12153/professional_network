<div class="container-fluid">
    <div class="col-md-1"></div>
    <div class="col-md-10">
        <h2>Users you may want to connect with:</h2>
        <table class="table table-hover">
            <thead>
              <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
                <tr>
                    <% @users.each do |user| %>

                <td><%= user.name %></td>
                <td><%= user.description %></td>
                <td><form action="/invitations" method='post'>
                  <input type='hidden' name='authenticity_token' value='<%= form_authenticity_token %>'>
                  <input type="hidden" name="invited" value="<%= user.id %>">
                  <input type='submit' class="btn btn-default" value="Connect">
                </form></td>
                </tr>
                <% end %>


            </tbody>
        </table>

<hr>
<a href="/professional_profile/<%= current_user.id %>">Back to My Profile</a>

    </div>
    <div class="col-md-1"></div>
</div>
